# API
API_URL=http://localhost:3001
VERIFIER_URL=http://localhost:3002
V4SHM_DATA_DIR=./data
V4SHM_EVENT_LOG=./data/events.jsonl
# Demo: reduce noisy per-request logs (good for screen recordings).
V4SHM_QUIET_LOGS=true

# Base Sepolia public RPCs (rate-limited; pick one if the first is flaky)
BASE_SEPOLIA_RPC_URLS=https://sepolia.base.org,https://base-sepolia-rpc.publicnode.com,https://base-sepolia.drpc.org,https://base-sepolia.gateway.tenderly.co,https://base-sepolia.api.onfinality.io/public,https://base-sepolia-public.nodies.app

# Yellow (mock by default)
YELLOW_MODE=mock
# If YELLOW_MODE=real and Yellow is flaky/unreachable, fall back to mock sessions/transfers.
YELLOW_FALLBACK_TO_MOCK=true
YELLOW_RPC_URL=https://sepolia.base.org
YELLOW_WS_URL=wss://clearnet-sandbox.yellow.com/ws
YELLOW_PRIVATE_KEY=
YELLOW_CHAIN_ID=84532
YELLOW_APP_NAME=v4-session-hook-market
# Comma-separated permissions (match what you need: transfers + app sessions).
YELLOW_SCOPE=transfer,app.create,app.state
# Optional: bump the session-key allowance (useful if you run many work orders in a row).
YELLOW_ALLOWANCE_TOTAL=
YELLOW_ENABLE_CHANNELS=false
# Optional: allocate this much from custody into the Nitrolite channel (requires onchain custody balance).
YELLOW_CHANNEL_ALLOCATE_TOTAL=
# Demo: split each milestone into N micro-payments to showcase Yellow throughput (M1-M4 => 4*N transfers).
YELLOW_MILESTONE_SPLITS=5

# Verifier
VERIFIER_MODE=mock
VERIFIER_SANDBOX=host
# If VERIFIER_SANDBOX=docker, the verifier will run Foundry inside this image.
VERIFIER_DOCKER_IMAGE=ghcr.io/foundry-rs/foundry:latest
V4_RPC_URL=https://sepolia.base.org
V4_PRIVATE_KEY=
# Base Sepolia PoolManager (verified on BaseScan)
V4_POOL_MANAGER=0x05E73354cFDd6745C338b50BcFDfA3Aa6fA03408
V4_CHAIN_ID=84532
V4_FEE=3000
V4_TICK_SPACING=60
# Number of deterministic "agent loop" steps executed in the onchain proof script.
V4_AGENT_STEPS=5
V4SHM_CHALLENGE_OUTCOME=REJECTED
# Demo convenience: enable UI actions like force-selecting a quote (Close Bidding + Select).
V4SHM_DEMO_ACTIONS=true

# Solver bot
SOLVER_PRIVATE_KEY=
SOLVER_PRICE=0.50
SOLVER_ETA_MINUTES=15
SOLVER_B_PRIVATE_KEY=
SOLVER_B_PRICE=0.45
SOLVER_B_ETA_MINUTES=12

# Challenger bot
CHALLENGER_PRIVATE_KEY=
BOT_POLL_MS=5000

# Web
NEXT_PUBLIC_API_BASE=http://localhost:3001
NEXT_PUBLIC_LIFI_INTEGRATOR=v4SessionHookMarket

FUNDING_PRIVATE_KEY=
FUNDING_ADDRESS=
