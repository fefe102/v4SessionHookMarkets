{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@v4shm/shared": ["packages/shared/src/index.ts"],
      "@v4shm/yellow-client": ["packages/yellow-client/src/index.ts"],
      "@v4shm/uniswap-client": ["packages/uniswap-client/src/index.ts"]
    },
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  }
}
